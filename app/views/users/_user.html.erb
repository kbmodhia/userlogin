
<%#user.inspect%>
<tr>
    <td><%=user.firstname%></td>
    <td><%=user.lastname%></td>
    <td><%=user.email%></td>
    <td><%=user.contactno%></td>
    <td><%=user.id == 1 ? "ADMIN": "OTHERS"%></td>
    <td><%= link_to "Image", url_for(user.profilepic) if user.profilepic.attached? %></td>
    <td><%=link_to "Edit", edit_user_path(user.id)%></td>
    <td><%=link_to "Delete", user_path(user.id), method: :delete, data: { confirm: 'Are you sure?' }%></td>
</tr>